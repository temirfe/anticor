<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="3dp"
    android:paddingBottom="10dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:id="@+id/id_tv_title"
        android:textColor="@color/black"
        android:layout_alignParentTop="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:id="@+id/id_tv_text"
        android:textColor="@color/gray5"
        android:layout_below="@+id/id_tv_title"/>

    <TextView
        android:id="@+id/textView_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:text="asdfsdf"
        android:textSize="12sp"
        android:layout_below="@+id/id_tv_text" />

    <ImageView
        android:id="@+id/id_iv_location"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="2dp"
        android:tint="@color/gray"
        android:src="@drawable/ic_location_on_black_24dp"
        android:layout_toEndOf="@+id/textView_date"
        android:layout_alignBottom="@+id/textView_date"
        android:contentDescription="@string/city" />

    <TextView
        android:id="@+id/id_tv_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="asdfsdf"
        android:layout_toEndOf="@+id/id_iv_location"
        android:layout_alignBottom="@+id/textView_date"
        />

</RelativeLayout>