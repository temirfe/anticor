<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="kg.prosoft.anticorruption.AddReportActivity"
    >
    <android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp">

        <android.support.design.widget.TextInputLayout
        android:id="@+id/id_til_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">
        <EditText
            android:id="@+id/id_et_title"
            android:imeOptions="flagNoExtractUi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:ems="10"
            android:inputType="text"
            android:hint="@string/title" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
        android:id="@+id/id_til_note"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/id_til_title"
        app:layout_constraintLeft_toLeftOf="@+id/id_til_title"
        app:layout_constraintRight_toRightOf="@+id/id_til_title"
        app:layout_constraintHorizontal_bias="0.0">
        <EditText
            android:id="@+id/id_et_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:ems="10"
            android:inputType="textMultiLine"
            android:hint="@string/report_description"/>
        </android.support.design.widget.TextInputLayout>

        <!--date-->
        <LinearLayout
            android:id="@+id/id_til_date"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/id_til_note"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:text="@string/date_time"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:id="@+id/id_tv_date" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/blue"
                android:id="@+id/id_tv_time" />
        </LinearLayout>

        <LinearLayout
        android:layout_width="0dp"
        android:id="@+id/id_ll_sector"
        android:orientation="horizontal"
        android:background="@drawable/border"
        android:onClick="sectorClick"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingStart="8dp"
        android:paddingEnd="3dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/id_til_date"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">
        <TextView
            android:id="@+id/id_tv_sector"
            android:layout_width="0dp"
            android:text="@string/select_sector"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/select_sector"
            android:src="@drawable/ic_arrow_drop_down_black_24dp"
            android:tint="@color/blue" />
        </LinearLayout>
        <LinearLayout
        android:layout_width="0dp"
        android:id="@+id/id_ll_authority"
        android:orientation="horizontal"
        android:background="@drawable/border"
        android:onClick="authorityClick"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingStart="8dp"
        android:paddingEnd="3dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/id_ll_sector"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">
        <TextView
            android:id="@+id/id_tv_authority"
            android:layout_width="0dp"
            android:text="@string/select_authority"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/select_sector"
            android:src="@drawable/ic_arrow_drop_down_black_24dp"
            android:tint="@color/blue" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:id="@+id/id_ll_type"
            android:orientation="horizontal"
            android:background="@drawable/border"
            android:onClick="typeClick"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingStart="8dp"
            android:paddingEnd="3dp"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@+id/id_ll_authority"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">
            <TextView
                android:id="@+id/id_tv_type"
                android:layout_width="0dp"
                android:text="@string/select_type"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/select_type"
                android:src="@drawable/ic_arrow_drop_down_black_24dp"
                android:tint="@color/blue" />

        </LinearLayout>

        <CheckBox
            android:id="@+id/id_chb_anonym"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wannabe_anonym"
            android:onClick="anonymCheck"
            android:layout_marginTop="35dp"
            app:layout_constraintTop_toBottomOf="@+id/id_ll_type"
            app:layout_constraintLeft_toLeftOf="@+id/id_ll_type" />

        <ImageView
            android:onClick="onClickAnonWarn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/id_chb_anonym"
            android:tint="@color/gray"
            android:src="@drawable/ic_help_black_24dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <RelativeLayout
            android:layout_width="0dp"
            android:id="@+id/id_ll_user"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintTop_toBottomOf="@+id/id_chb_anonym"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/id_til_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/id_et_name"
                    android:imeOptions="flagNoExtractUi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="@string/name" />
            </android.support.design.widget.TextInputLayout>
            <ImageView
                android:onClick="onClickNameHelp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/id_til_name"
                android:paddingTop="15dp"
                android:layout_alignParentRight="true"
                android:tint="@color/gray"
                android:src="@drawable/ic_help_black_24dp"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/id_til_email"
                android:layout_below="@+id/id_til_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/id_et_email"
                    android:imeOptions="flagNoExtractUi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textEmailAddress"
                    android:hint="@string/prompt_email" />
            </android.support.design.widget.TextInputLayout>
            <ImageView
                android:onClick="onClickEmailWarn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/id_til_email"
                android:paddingTop="15dp"
                android:layout_alignParentRight="true"
                android:tint="@color/gray"
                android:src="@drawable/ic_help_black_24dp"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/id_til_contact"
                android:layout_below="@+id/id_til_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/id_et_contact"
                    android:imeOptions="flagNoExtractUi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="text"
                    android:hint="@string/contact" />
            </android.support.design.widget.TextInputLayout>
            <ImageView
                android:onClick="onClickContactHelp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/id_til_contact"
                android:paddingTop="15dp"
                android:layout_alignParentRight="true"
                android:tint="@color/gray"
                android:src="@drawable/ic_help_black_24dp"/>
            </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:id="@+id/id_ll_city"
            android:orientation="horizontal"
            android:background="@drawable/border"
            android:onClick="cityClick"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingStart="8dp"
            android:paddingEnd="3dp"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@+id/id_ll_user"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">
            <TextView
                android:id="@+id/id_tv_city"
                android:layout_width="0dp"
                android:text="@string/select_city"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/select_sector"
                android:src="@drawable/ic_arrow_drop_down_black_24dp"
                android:tint="@color/blue" />
        </LinearLayout>

        <TextView
            android:id="@+id/id_tv_set_location"
            android:text="@string/set_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/id_ll_city"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <!--map frame-->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginTop="7dp"
            android:id="@+id/id_rl_add_map"
            app:layout_constraintTop_toBottomOf="@+id/id_tv_set_location"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">
            <FrameLayout
                android:id="@+id/id_fl_add_map"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                >
            </FrameLayout>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_tv_lat"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/id_rl_add_map"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_tv_lng"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/id_tv_lat"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/id_ll_images"
            app:layout_constraintTop_toBottomOf="@+id/id_tv_lng"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            >

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_ll_add_photo"
            android:clickable="true"
            android:background="@drawable/view_click"
            android:paddingRight="10dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/id_ll_images"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_a_photo_black_24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:paddingLeft="10dp"
                android:textSize="18sp"
                android:text="@string/add_image"
                android:textColor="@drawable/link"
                android:paddingTop="3dp"
                android:id="@+id/id_tv_add_photo"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <Button
            android:text="@string/submit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/id_btn_submit_report"
            android:onClick="submitReport"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/blue_view_click"
            android:layout_weight="1"
            app:layout_constraintTop_toBottomOf="@+id/id_ll_add_photo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>
