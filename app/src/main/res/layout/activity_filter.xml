<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id_rl_filter"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    tools:context="kg.prosoft.anticorruption.FilterActivity">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/id_til_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="24dp">
        <EditText
            android:id="@+id/id_et_search"
            android:imeOptions="flagNoExtractUi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:hint="@string/search" />
    </android.support.design.widget.TextInputLayout>
    <ImageView
        android:id="@+id/id_iv_clear_search"
        android:visibility="gone"
        android:layout_width="22dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="5dp"
        android:paddingEnd="0dp"
        android:onClick="clearSearch"
        android:layout_alignBottom="@+id/id_til_search"
        android:src="@drawable/ic_close_black_24dp"
        android:contentDescription="@string/clear"
        />

    <LinearLayout
        android:id="@+id/id_ll_sector"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:onClick="sectorClick"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingStart="8dp"
        android:paddingEnd="3dp"
        android:layout_marginEnd="24dp"
        android:gravity="center_vertical"
        android:layout_below="@+id/id_til_search"
        android:layout_marginTop="16dp">
        <TextView
            android:id="@+id/id_tv_sector"
            android:layout_width="0dp"
            android:text="@string/select_sector"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/select_sector"
            android:src="@drawable/ic_arrow_drop_down_black_24dp"
            android:tint="@color/blue" />
    </LinearLayout>
    <ImageView
        android:id="@+id/id_iv_clear_sector"
        android:visibility="gone"
        android:layout_width="22dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="5dp"
        android:paddingEnd="0dp"
        android:onClick="clearSector"
        android:layout_alignBottom="@+id/id_ll_sector"
        android:src="@drawable/ic_close_black_24dp"
        android:contentDescription="@string/clear"
        />

    <LinearLayout
        android:id="@+id/id_ll_authority"
        android:layout_below="@+id/id_ll_sector"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/border"
        android:onClick="authorityClick"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingStart="8dp"
        android:paddingEnd="3dp"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp">
        <TextView
            android:id="@+id/id_tv_authority"
            android:layout_width="0dp"
            android:text="@string/select_authority"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/select_sector"
            android:src="@drawable/ic_arrow_drop_down_black_24dp"
            android:tint="@color/blue" />
    </LinearLayout>
    <ImageView
        android:id="@+id/id_iv_clear_authority"
        android:visibility="gone"
        android:layout_width="22dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="5dp"
        android:paddingEnd="0dp"
        android:onClick="clearAuthority"
        android:layout_alignBottom="@+id/id_ll_authority"
        android:src="@drawable/ic_close_black_24dp"
        android:contentDescription="@string/clear"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/id_ll_authority"
        android:id="@+id/id_ll_type"
        android:orientation="horizontal"
        android:background="@drawable/border"
        android:onClick="typeClick"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingStart="8dp"
        android:paddingEnd="3dp"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp">
        <TextView
            android:id="@+id/id_tv_type"
            android:layout_width="0dp"
            android:text="@string/select_type"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/select_type"
            android:src="@drawable/ic_arrow_drop_down_black_24dp"
            android:tint="@color/blue" />

    </LinearLayout>
    <ImageView
        android:id="@+id/id_iv_clear_type"
        android:visibility="gone"
        android:layout_width="22dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="5dp"
        android:paddingEnd="0dp"
        android:onClick="clearType"
        android:layout_alignBottom="@+id/id_ll_type"
        android:src="@drawable/ic_close_black_24dp"
        android:contentDescription="@string/clear"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/id_ll_city"
        android:layout_below="@+id/id_ll_type"
        android:orientation="horizontal"
        android:background="@drawable/border"
        android:onClick="cityClick"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingStart="8dp"
        android:paddingEnd="3dp"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp">
        <TextView
            android:id="@+id/id_tv_city"
            android:layout_width="0dp"
            android:text="@string/select_city"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/select_sector"
            android:src="@drawable/ic_arrow_drop_down_black_24dp"
            android:tint="@color/blue" />
    </LinearLayout>
    <ImageView
        android:id="@+id/id_iv_clear_city"
        android:visibility="gone"
        android:layout_width="22dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="5dp"
        android:paddingEnd="0dp"
        android:onClick="clearCity"
        android:layout_alignBottom="@+id/id_ll_city"
        android:src="@drawable/ic_close_black_24dp"
        android:contentDescription="@string/clear"
        />

    <Button
        android:id="@+id/id_btn_apply"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:onClick="applyFilter"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:background="@drawable/blue_view_click"
        android:text="@string/apply"
        />

</RelativeLayout>